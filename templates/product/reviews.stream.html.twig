<turbo-stream action="update" target="product-{{ product.id }}-quick-stats">
    <template>
        {{ include('product/_quickStats.html.twig') }}
    </template>
</turbo-stream>

<turbo-stream action="append" target="product-{{ product.id }}-review-list">
    <template>
        {{ include('product/_review.html.twig', {
            review: newReview
        }) }}
    </template>
</turbo-stream>